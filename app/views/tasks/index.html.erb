<h1>Task list</h1>

<table class="table">
  <tr>
    <th>id</th>
    <th>task</th>
    <th>status</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.content %></td>
      <td><%= task.status %></td>
    </tr>
  <% end %>
</table>

<%= paginate @tasks %>
