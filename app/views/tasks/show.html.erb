<h1>id:<%= @task.id %>Detail page</h1>

<table class="table">
  <tr>
    <th>task</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>status</th>
    <td><%= @task.status %></td>
  </tr>
</table>

<%= link_to 'Edit', edit_task_path(@task), class: "btn btn-default" %>
<%= link_to 'Delete', @task, method: :delete, data: { confirm: "really?" }, class: "btn btn-danger" %>